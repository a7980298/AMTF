<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amtf.demo.dao.F010011Dao">
	<!-- 活动发布人信息 -->
	<select id="f010011_Select1" resultType="com.amtf.demo.commonentity.AmtfUserEntity">
		SELECT
			*
		FROM
			AMTF_USER
		WHERE
			USER_EMAIL = #{email}
	</select>
	<!-- 查看是否关注该用户 -->
	<select id="f010011_Select2" resultType="int">
		SELECT
			COUNT(*)
		FROM
			AMTF_USER_ATTENTION
		WHERE
			ATTENTION_ID = #{attention_id}
		AND
			USER_ID = #{userid}
	</select>
	<!-- 关注该用户 -->
	<insert id="f010011_Insert3">
		INSERT INTO
			AMTF_USER_ATTENTION
		VALUES(
			#{entity.user_attention_id}
			,#{entity.attention_id}
			,#{entity.user_id}
			,NOW());
	</insert>
	<!-- 取消关注该用户 -->
	<delete id="f010011_Delete4">
		DELETE FROM
			AMTF_USER_ATTENTION
		WHERE
			ATTENTION_ID = #{entity.attention_id}
		AND
			USER_ID = #{entity.user_id}
	</delete>
</mapper>
