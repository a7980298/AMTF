<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amtf.demo.dao.CommonDao">
	<!-- 获取user表最大id -->
	<select id="common_Select1"
		resultType="int">
		SELECT
			MAX(USER_ID)
		FROM
			AMTF_USER
	</select>
	<!-- 获取updnotice表最大id -->
	<select id="common_Select2"
		resultType="int">
		SELECT
			MAX(UPDNOTICE_ID)
		FROM
			AMTF_UPDNOTICE
	</select>
	<!-- 获取activity表最大id -->
	<select id="common_Select3"
		resultType="int">
		SELECT
			MAX(ACTIVITY_ID)
		FROM
			AMTF_ACTIVITY
	</select>
	<!-- 获取useractivity表最大id -->
	<select id="common_Select4"
		resultType="int">
		SELECT
			MAX(USERACTIVITY_ID)
		FROM
			AMTF_USERACTIVITY
	</select>
	<!-- 获取comment表最大id -->
	<select id="common_Select5"
			resultType="int">
		SELECT
			MAX(ACTIVITY_COMMENT_ID)
		FROM
			AMTF_ACTIVITY_COMMENT
	</select>
	<!-- 获取reply表最大id -->
	<select id="common_Select6"
			resultType="int">
		SELECT
			MAX(ACTIVITY_COMMENT_REPLY_ID)
		FROM
			AMTF_ACTIVITY_COMMENT_REPLY
	</select>
	<!-- 获取fabulous表最大id -->
	<select id="common_Select7"
			resultType="int">
		SELECT
			MAX(ACTIVITY_FABULOUS_ID)
		FROM
			AMTF_ACTIVITY_FABULOUS
	</select>
</mapper>
